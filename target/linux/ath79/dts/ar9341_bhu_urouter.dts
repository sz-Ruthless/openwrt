#include "ar9341.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	model = "BHU uRouter";
	compatible = "bhu,urouter", "qca,ar9341";

	aliases {
		label-mac-device=&eth0;
		led-boot = &led_power;
		led-failsafe = &led_power;
		led-running = &led_power;
		led-upgrade = &led_power;
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			linux,code = <KEY_RESTART>;
			gpios = <&gpio 17 GPIO_ACTIVE_LOW>;
		};
	};

	leds {
		compatible = "gpio-leds";

		led_system: system {
			label = "red:system";
			gpios = <&gpio 15 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		wan {
			label = "blue:wan";
			gpios = <&gpio 18 GPIO_ACTIVE_LOW>;
		};
	};
};

&ref {
	clock-frequency = <25000000>;
};

&spi {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <25000000>;
		
mtdparts=ath-nor0:256k(u-boot),64k(u-boot-env),1408k(kernel),8448k(rootfs),1408k(kernel2),1664k(rescure),2944kr),64k(cfg),64k(oem),64k(ART)

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			uboot: partition@0 {
				label = "u-boot";
				reg = <0x000000 0x040000>;
				read-only;
			};

			partition@40000 {
				label = "u-boot-env";
				reg = <0x040000 0x010000>;
				read-only;
			};

			partition@50000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x050000 0x09a0000>;
			};

			art: partition@7f0000 {
				label = "art";
				reg = <0x7f0000 0x010000>;
				read-only;
			};
			art: partition@7f0000 {
				label = "art";
				reg = <0x7f0000 0x010000>;
				read-only;
			};
			art: partition@7f0000 {
				label = "cfg";
				reg = <0x7f0000 0x010000>;
				read-only;
			};
			art: partition@7f0000 {
				label = "oem";
				reg = <0x7f0000 0x010000>;
				read-only;
			};
			art: partition@7f0000 {
				label = "art";
				reg = <0x7f0000 0x010000>;
				read-only;

				compatible = "nvmem-cells";
				#address-cells = <1>;
				#size-cells = <1>;

				macaddr_art_0: macaddr@0 {
					reg = <0x0 0x6>;
				};
			};
		};
	};
};

&wmac {
	status = "okay";

	mtd-cal-data = <&art 0x1000>;
};

&eth0 {
	status = "okay";

	phy-handle = <&swphy0>;
	nvmem-cells = <&macaddr_art_0>;
	nvmem-cell-names = "mac-address";
	mac-address-increment = <1>;
};

&eth1 {
	phy-handle = <&swphy4>;
	pll-data = <0x06000000 0x00000101 0x00001616>;

	nvmem-cells = <&macaddr_art_0>;
	nvmem-cell-names = "mac-address";

	gmac-config {
		device = <&gmac>;
		switch-phy-swap = <1>;
	};
};
